<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bgapps"
tools:context=".GalleryAlbum">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:text="Albums"
            android:textColor="#ffffff"
            android:textSize="22sp">

        </TextView>

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="3">


        <androidx.cardview.widget.CardView
            android:id="@+id/map_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_margin="12dp">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:fadingEdge="horizontal|vertical"
                    android:src="@drawable/image_colombo" />

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Colombo"
                    android:textColor="#6f6f6f"
                    android:textSize="18sp"

                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_margin="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/image_anuradhapura"/>
                <TextView


                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Anuradhapura"
                    android:textSize="18sp"
                    android:textColor="#6f6f6f"
                    android:layout_marginTop="2dp"

                    />



            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_margin="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/image_galle"/>
                <TextView


                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Galle"
                    android:textSize="18sp"
                    android:textColor="#6f6f6f"
                    android:layout_marginTop="2dp"

                    />



            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_margin="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/image_polonnaruwa"/>
                <TextView


                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Polonnaruwa"
                    android:textSize="18sp"
                    android:textColor="#6f6f6f"
                    android:layout_marginTop="2dp"

                    />



            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_margin="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:fadingEdge="horizontal|vertical"
                    android:src="@drawable/image3" />
                <TextView


                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Location X"
                    android:textSize="18sp"
                    android:textColor="#6f6f6f"
                    android:layout_marginTop="12dp"

                    />



            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/flight_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_margin="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:fadingEdge="horizontal|vertical"
                    android:src="@drawable/image3" />
                <TextView


                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Location X"
                    android:textSize="18sp"
                    android:textColor="#6f6f6f"
                    android:layout_marginTop="12dp"

                    />



            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_margin="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:fadingEdge="horizontal|vertical"
                    android:src="@drawable/image3" />
                <TextView


                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Location X"
                    android:textSize="18sp"
                    android:textColor="#6f6f6f"
                    android:layout_marginTop="12dp"

                    />



            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_margin="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:fadingEdge="horizontal|vertical"
                    android:src="@drawable/image3" />
                <TextView


                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Location X"
                    android:textSize="18sp"
                    android:textColor="#6f6f6f"
                    android:layout_marginTop="12dp"

                    />



            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>


</LinearLayout>



</ScrollView>