<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/faq"
    tools:context=".HotelActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sri Lanka Travel - FAQ"
                android:textColor="#ffffff"
                android:textSize="22sp">

            </TextView>

        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:rowCount="3">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/ripple"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:layout_margin="12dp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/center"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text=" ''Do I need a visa to enter Sri Lanka?'' "
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"

                        android:textSize="25sp"
                        android:textStyle="bold|italic" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Yes, you will need a visa to enter Sri Lanka. In addition, if you intend visiting Sri Lanka on a short visit,you will need to obtain an Electronic Travel Authorization (ETA) prior to arrival."
                        android:textAlignment="viewStart"
                        android:textColor="#6f6f6f"

                        android:textSize="18sp" />




                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/ripple"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:layout_margin="12dp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/center"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text=" ''What is an Electronic Travel Authorization (ETA) ?'' "
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"

                        android:textSize="25sp"
                        android:textStyle="bold|italic" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="The Electronic Travel Authorization (ETA) is an official authorization for a Short Visit to Sri Lanka and is issued through an on-line system. You need to obtain an ETA if you intend visiting Sri Lanka as a Tourist, on Business or on Transit. No passport copies, documents or photographs are required to obtain the ETA. ETA holders will be issued a 30 day Short Visit visa at the port of entry in Sri Lanka."
                        android:textAlignment="viewStart"
                        android:textColor="#6f6f6f"

                        android:textSize="18sp" />




                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/ripple"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:layout_margin="12dp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/center"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text=" ''Am I required to obtain an ETA?'' "
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"

                        android:textSize="25sp"
                        android:textStyle="bold|italic" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Nationals of all countries with the exception of citizens of countries mentioned below are required to obtain an ETA to visit Sri Lanka"
                        android:textAlignment="viewStart"
                        android:textColor="#6f6f6f"

                        android:textSize="18sp" />




                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/ripple"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:layout_margin="12dp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/center"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text=" ''How much does the ETA cost?'' "
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"

                        android:textSize="25sp"
                        android:textStyle="bold|italic" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="The non-refundable ETA processing fee for a Tourist visa with Double Entry for 30 days for citizens of South Asian Association for Regional Cooperation (SAARC) countries will cost US$ 15, all other countries will cost US$ 30. Children below 12 years of age are exempt from the ETA fee."
                        android:textAlignment="viewStart"
                        android:textColor="#6f6f6f"

                        android:textSize="18sp" />




                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/ripple"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:layout_margin="12dp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/center"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text=" ''My holiday is over 30 days, how can I obtain an extension to my visa?'' "
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"

                        android:textSize="25sp"
                        android:textStyle="bold|italic" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="You can either apply and obtain an extended visa from a Sri Lankan Embassy/ Consulate from your country of residence prior to arrival in Sri Lanka or get an extension from the Department of Immigration and Emigration in Colombo 10. This procedure will take about 2-3 hours, and you will have to give a bona fide reason for staying over 30 days. If you are staying in a resort for a long period, the staff will be able to help you with the application."
                        android:textAlignment="viewStart"
                        android:textColor="#6f6f6f"

                        android:textSize="18sp" />




                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>


    </LinearLayout>



</ScrollView>